{
  "retry_config": {
    "default_policy": {
      "max_attempts": 3,
      "base_delay": 1.0,
      "max_delay": 30.0,
      "backoff_multiplier": 2.0,
      "jitter": true
    },
    "error_classification": {
      "retryable_exceptions": [
        "ConnectionError",
        "TimeoutError", 
        "OSError",
        "TemporaryFailure"
      ],
      "non_retryable_exceptions": [
        "AuthenticationError",
        "PermissionError",
        "ValidationError",
        "FileNotFoundError",
        "ValueError"
      ]
    },
    "policies": {
      "network": {
        "max_attempts": 5,
        "base_delay": 0.5,
        "max_delay": 60.0,
        "retryable_error_codes": [
          "NETWORK_TIMEOUT",
          "NETWORK_CONNECTION_FAILED"
        ]
      },
      "file_io": {
        "max_attempts": 2,
        "base_delay": 0.1,
        "max_delay": 5.0,
        "retryable_error_codes": [
          "FILE_ACCESS_ERROR"
        ]
      },
      "database": {
        "max_attempts": 3,
        "base_delay": 1.0,
        "max_delay": 30.0,
        "retryable_error_codes": [
          "CONNECTION_ERROR",
          "QUERY_TIMEOUT"
        ]
      },
      "docker": {
        "max_attempts": 2,
        "base_delay": 5.0,
        "max_delay": 30.0,
        "retryable_error_codes": [
          "DOCKER_NOT_AVAILABLE",
          "CONTAINER_START_FAILED"
        ]
      },
      "command": {
        "max_attempts": 2,
        "base_delay": 1.0,
        "max_delay": 10.0,
        "retryable_error_codes": [
          "COMMAND_TIMEOUT"
        ]
      }
    }
  }
}