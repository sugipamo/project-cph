{
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_]+$": {
      "type": "object",
      "properties": {
        "aliases": {"type": "array", "items": {"type": "string"}},
        "commands": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "object",
              "properties": {
                "aliases": {"type": "array", "items": {"type": "string"}},
                "description": {"type": "string"},
                "steps": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {"type": "string"},
                      "cmd": {"type": "array", "items": {"type": "string"}}
                    },
                    "required": ["type", "cmd"]
                  },
                  "minItems": 1
                }
              },
              "required": ["steps"]
            }
          }
        },
        "env_types": {"type": "object"},
        "contest_current_path": {"type": "string"}
      },
      "required": ["commands", "env_types"]
    }
  }
} 